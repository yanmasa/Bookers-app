<% if flash[:notice] %>
  <p class="flash"><%= notice %></p>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan ="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book) ,class: "link" %></td>
      <td><%= link_to "Edit", edit_book_path(book) ,class: "link" %></td>
      <td><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" ,class: "link" %></td>
      </tr>
    <% end %>
</tbody>
</table>


<h2>New Book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

  <%= form_with model: @book, local:true do |f| %>

  <div class="field">
    <div class="field_with_errors">
    <label for ="book_tiile">Title</label>
    </div>
    <%= f.text_field :title %>
    </div>

  <div class="field">
    <div class="field_with_errors">
    <label for ="book_body">Body</label>
    </div>
    <%= f.text_area :body %>
  </div>

  <div class ="actions">
  <%= f.submit 'Create Book' %>
  </div>

  <% end %>
<% else %>

<%= form_with model: @book, local:true do |f| %>

  <div class="field">
    <label for ="book_tiile">Title</label>
    <%= f.text_field :title %>
    </div>

  <div class="field">
    <label for ="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class ="actions">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>

<% end %>