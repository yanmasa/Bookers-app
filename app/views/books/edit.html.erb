<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

  <%= form_with model:@book, local:true do |f| %>

  <div class="field">
    <div class="field_with_errors">
    <label for ="book_tiile">Title</label>
    </div>
    <div class="field_with_errors">
    <%= f.text_field :title %>
    </div>
    </div>

  <div class="field">
    <div class="field_with_errors">
    <label for ="book_body">Body</label>
    </div>
    <div class="field_with_errors">
    <%= f.text_area :body %>
    </div>
  </div>

  <div class ="actions">
  <%= f.submit 'Update Book' %>
  </div>

  <% end %>
<% else %>

<%= form_with model: @book, local: true do |f| %>

  <div class="field">
    <label for ="book_tiile">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for ="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class ="actions">
  <%= f.submit 'Update Book' %>
  </div>

  <% end %>
<% end %>

  <%= link_to "Show", book_path(@book) ,class: "link" %>
   |
  <%= link_to "Back", books_path ,class: "link" %>